<br>
<div class="container">
    <h1> Login </h1>

    <%= form_with url: session_path, local:true do |f| %>

    <div class="form-group">
        <%= f.label :email %>
        <%= f.text_area(:email, class: 'form-control') %>
    </div>

    <div class="form-group">
        <%= f.label :password %>
        <%= f.text_area(:password, class: 'form-control') %>
    </div>
    <%= f.submit 'Login', class:'btn btn-block btn-primary' %>
    <% end %>
</div>