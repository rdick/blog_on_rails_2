<br>
<div class="container">
    <h1> Change Account Details </h1>
    <br>

    <%= form_with model: current_user, local:true do |f| %>
    <div class='form-group'>
        <%= f.label :name %>
        <%= f.text_field(:name, class: 'form-control', placeholder: '#{current_user.name}')%>
    </div>
    <div class='form-group'>
        <%= f.label :email %>
        <%= f.text_area(:email, class: 'form-control', placeholder: '#{current_user.email}')%>
    </div>
    <div>
        <%= f.submit "Submit", class: 'btn btn-primary'%>
        <% end %>
        <%= link_to "Change Pasword", edit_user_path(current_user), class: "btn btn-danger", style: "margin-right: 30px" %>
    </div>
</div>